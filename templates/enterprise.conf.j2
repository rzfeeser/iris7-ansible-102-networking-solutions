# ==========================================
# STARFLEET VESSEL CONFIGURATION (SIMULATED)
# ==========================================
# Generated by Ansible template: {{ ansible_managed | default("Ansible Managed") }}

[VESSEL]
name            = {{ ship.name }}
registry        = {{ ship.registry }}
class           = {{ ship.class }}
captain         = {{ ship.captain }}
chief_engineer  = {{ ship.chief_engineer }}
mission         = {{ ship.mission }}

[ALERTS]
red_alert       = {{ "ENABLED" if red_alert else "disabled" }}

[NAVIGATION]
warp_factor     = {{ warp_factor }}
{% if warp_factor | int >= 9 %}
warp_notes      = WARNING: approaching maximum safe sustained warp
{% elif warp_factor | int >= 7 %}
warp_notes      = CAUTION: high warp operations
{% else %}
warp_notes      = nominal
{% endif %}

[SYSTEMS]
{% for s in systems %}
system.{{ "%02d" | format(loop.index) }} = {{ s.name }} : {{ s.status }}
{% endfor %}

[CREW]
{% for c in crew_roster %}
crew.{{ c.role | replace(" ", "_") | lower }} = {{ c.name }}
{% endfor %}

[OPERATING_RULES]
rule.01 = Do not feed the Tribbles.
rule.02 = Do not engage warp inside a gravity well.
rule.03 = If you hear "KHAAAN!", check engine temperature.

# End of config for {{ ship.registry }}
